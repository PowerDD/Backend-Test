doctype 5
html
	head
		title= data.title
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', )
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='/stylesheets/AdminLTE.min.css')
		link(rel='stylesheet', href='/stylesheets/skins/skin-blue.min.css')
		link(rel='stylesheet', href='/stylesheets/style.css')

	if data.screen != 'login'
		body.skin-blue.sidebar-mini

		input#apiKey(type="hidden", value= data.apiKey)

		.wrapper
			header.main-header
				a.logo(href="index2.html")
					span.logo-mini
						b  PDD
					span.logo-lg
						b PowerDD  
						| Backend
				
				nav.navbar.navbar-static-top(role="navigation")
					a.sidebar-toggle(href="#", data-toggle="offcanvas", role="button")
						span.sr-only  Toggle navigation

					div.navbar-custom-menu
						ul.nav.navbar-nav

							li.dropdown
								a.dropdown-toggle(href="#", data-toggle="dropdown")
									span
										|  #{__('Language')}
									span.caret
								ul.dropdown-menu(role="menu")
									li(class=(data.memberInfo.Locale.substr(0,2) == 'th' ? 'active' : ''))
										a(href="javascript:void(0)") ภาษาไทย
									li(class=(data.memberInfo.Locale.substr(0,2) == 'en' ? 'active' : ''))
										a(href="javascript:void(0)") English

							li.dropdown.user.user-menu
								a.dropdown-toggle(href="#", data-toggle="dropdown")
									img.user-image(src="/images/avatar5.png", alt="User Image")
									span.hidden-xs  #{data.memberInfo.DisplayName}
								ul.dropdown-menu
									li.user-header
										img.img-circle(src="/images/avatar5.png", alt="User Image")
										p
											| #{data.memberInfo.DisplayName} - #{__('Member Type - '+data.memberInfo.SelectedMemberType)}
											small #{__('Member since')} #{data.memberInfo.RegisterDate}
									li.user-footer
										div.pull-left
											a.btn.btn-default.btn-flat(href="#") #{__('Profile')}
										div.pull-right
											a.btn-logout.btn.btn-default.btn-flat(href="javascript:void(0)") #{__('Sign out')}

			aside.main-sidebar
				section.sidebar
					div.user-panel
						div.pull-left.image
							img.img-circle(src="/images/avatar5.png", alt="User Image")
						div.pull-left.info
							p
								| #{data.memberInfo.DisplayName}
							a(href="#")
								i.fa.fa-circle.text-success
								| Online

					form.sidebar-form(action="#", method="get")
						div.input-group
							input.form-control(type="text", name="q", placeholder="Search...")
							span.input-group-btn
								button.btn.btn-flat(type='submit', name='search')
									i.fa.fa-search

					ul.sidebar-menu
						li.header  API
						li(class=(data.screen === 'member' || data.screen === 'dealer' || data.screen === 'teamwork' ? 'treeview active' : 'treeview'))
							a(href="#")
								i(class=(data.screen === 'member' || data.screen === 'dealer' || data.screen === 'teamwork' ? 'fa fa-user text-aqua' : 'fa fa-user'))
								span  Member
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class=(data.screen === 'member' ? 'active' : ''))
									a(href="./member")
										i(class=(data.screen === 'member' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Member
								li(class=(data.screen === 'dealer' ? 'active' : ''))
									a(href="./dealer")
										i(class=(data.screen === 'dealer' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Dealer
								li(class=(data.screen === 'teamwork' ? 'active' : ''))
									a(href="./teamwork")
										i(class=(data.screen === 'teamwork' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Teamwork

						li(class=(data.screen === 'product' || data.screen === 'category' || data.screen === 'brand' ? 'treeview active' : 'treeview'))
							a(href="#")
								i(class=(data.screen === 'product' || data.screen === 'category' || data.screen === 'brand' ? 'fa fa-cubes text-aqua' : 'fa fa-cubes'))
								span  Product
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class=(data.screen === 'product' ? 'active' : ''))
									a(href="./product")
										i(class=(data.screen === 'product' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Product
								li(class=(data.screen === 'category' ? 'active' : ''))
									a(href="./category")
										i(class=(data.screen === 'category' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Category
								li(class=(data.screen === 'brand' ? 'active' : ''))
									a(href="./brand")
										i(class=(data.screen === 'brand' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Brand

						li(class=(data.screen === 'cart' ? 'treeview active' : 'treeview'))
							a(href="#")
								i(class=(data.screen === 'cart' || data.screen === 'order' ? 'fa fa-shopping-cart text-aqua' : 'fa fa-shopping-cart'))
								span  Order
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class=(data.screen === 'cart' ? 'active' : ''))
									a(href="./cart")
										i(class=(data.screen === 'cart' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Cart
								li(class=(data.screen === 'order' ? 'active' : ''))
									a(href="./order")
										i(class=(data.screen === 'order' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Order

						li(class=(data.screen === 'shop' || data.screen === 'shop-config' ? 'treeview active' : 'treeview'))
							a(href="#")
								i(class=(data.screen === 'shop' || data.screen === 'shop-config' ? 'fa fa-home text-aqua' : 'fa fa-home'))
								span  Shop
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class=(data.screen === 'shop' ? 'active' : ''))
									a(href="./shop")
										i(class=(data.screen === 'shop' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Shop

								li(class=(data.screen === 'shop-config' ? 'active' : ''))
									a(href="./shop-config")
										i(class=(data.screen === 'shop-config' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Configuration

						li(class=(data.screen === 'province' ? 'treeview active' : 'treeview'))
							a(href="#")
								i(class=(data.screen === 'province' ? 'fa fa-database text-aqua' : 'fa fa-database'))
								span  Master Data
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class=(data.screen === 'province' ? 'active' : ''))
									a(href="./province")
										i(class=(data.screen === 'province' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Province

						li(class=(data.screen === 'security' || data.screen === 'webclient' || data.screen === 'api' ? 'treeview active' : 'treeview'))
							a(href="#")
								i(class=(data.screen === 'security' || data.screen === 'webclient' || data.screen === 'api' ? 'fa fa-slack text-aqua' : 'fa fa-slack'))
								span  Utilities
								i.fa.fa-angle-left.pull-right
							ul.treeview-menu
								li(class=(data.screen === 'security' ? 'active' : ''))
									a(href="./security")
										i(class=(data.screen === 'security' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Security
								li(class=(data.screen === 'webclient' ? 'active' : ''))
									a(href="./webclient")
										i(class=(data.screen === 'webclient' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  Web Client
								li(class=(data.screen === 'api' ? 'active' : ''))
									a(href="./api")
										i(class=(data.screen === 'api' ? 'fa fa-circle-o text-yellow' : 'fa fa-circle-o'))
										|  API

					ul.sidebar-menu
						li.header  Developer
						li
							a(href="./console")
								i.fa.fa-heart
								span  API Console

			div.content-wrapper
				section.content-header
					h1= data.title
						small= data.titleDescription
				section.content
					block content

			footer.main-footer
				div.pull-right.hidden-xs  API Version  
					b 2.0
				strong  Copyright &copy; 2015 
					a(href="http://www.PowerDD.com") PowerDD
				|  All rights reserved.

		script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
		script(src='//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js')
		script(src='/javascripts/app.min.js')
		script(src='/javascripts/common.js')

	else
		block content
	