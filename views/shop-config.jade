extends layout

block content
	.row
		.col-md-4
			.box.box-primary
				.box-header.with-border
					h3.box-title 
						i.fa.fa-clock-o
						|  #{__('Expiration Time')}
				.box-body
					form(role="form")

						.form-group
							label #{__('Cart Expired')}
							.input-group
								input.form-control.txt-input.numeric-only(type='text')
								.input-group-btn
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
										span.message #{__('Hours')} 
										span.fa.fa-caret-down
									ul.dropdown-menu
										li.active
											a.option(href='javascript:void(0)', data-value='H') #{__('Hours')}
										li
											a.option(href='javascript:void(0)', data-value='D') #{__('Days')}

						.form-group
							label #{__('Order Expired')}
							.input-group
								input.form-control.txt-input.numeric-only(type='text')
								.input-group-btn
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
										span.message #{__('Hours')} 
										span.fa.fa-caret-down
									ul.dropdown-menu
										li.active
											a.option(href='javascript:void(0)', data-value='H') #{__('Hours')}
										li
											a.option(href='javascript:void(0)', data-value='D') #{__('Days')}

						.form-group
							label #{__('Login Expired (Normal)')}
							.input-group
								input.form-control.txt-input.numeric-only(type='text')
								.input-group-btn
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
										span.message #{__('Hours')} 
										span.fa.fa-caret-down
									ul.dropdown-menu
										li.active
											a.option(href='javascript:void(0)', data-value='H') #{__('Hours')}
										li
											a.option(href='javascript:void(0)', data-value='D') #{__('Days')}

						.form-group
							label #{__('Login Expired (Remember)')}
							.input-group
								input.form-control.txt-input.numeric-only(type='text')
								.input-group-btn
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
										span.message #{__('Hours')} 
										span.fa.fa-caret-down
									ul.dropdown-menu
										li.active
											a.option(href='javascript:void(0)', data-value='H') #{__('Hours')}
										li
											a.option(href='javascript:void(0)', data-value='D') #{__('Days')}

				.box-footer
					span.btn.btn-primary.pull-right
						i.fa.fa-save
						|  #{__('Save Data')}



		.col-md-4
			.box.box-primary
				.box-header.with-border
					h3.box-title 
						i.fa.fa-truck
						|  #{__('Shipping Cost')}
				.box-body
					form(role="form")

						.form-group
							.radio
								label
									input(type='radio', name='hasFees', value='0')
									|  #{__('Free Shipping')}
						.form-group
							.radio
								label
									input(type='radio', name='hasFees', value='1')
									|  #{__('Has Shipping Cost')}

						.dotted-line

						.form-group.padding-left-15
							.radio
								label
									input(type='radio', name='feesType', value='F', checked)
									|  #{__('Fixed Cost')}

						.form-group.padding-left-15
							.input-group
								input.form-control.txt-input.numeric-only(type='text')
								.input-group-btn
									button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
										span.message #{__('Per Order')} 
										span.fa.fa-caret-down
									ul.dropdown-menu
										li.active
											a.option(href='javascript:void(0)', data-value='P') #{__('Per Piece')}
										li
											a.option(href='javascript:void(0)', data-value='O') #{__('Per Order')}
						.form-group.padding-left-15
							.radio
								label
									input(type='radio', name='feesType', value='W', disabled)
									|  #{__('Weight Calculation')}
							